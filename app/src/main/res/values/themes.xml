<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MadCampProject2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_dark_pink</item>
        <item name="colorPrimaryVariant">@color/main_dark_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/main_light_blue</item>
    </style>

    <style name="Theme.MadCampProject2.Fullscreen" parent="Theme.MadCampProject2">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.MadCampProject2.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MadCampProject2.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/main_dark_blue</item>
        <item name="fullscreenTextColor">@color/main_light_blue</item>
    </style>
</resources>